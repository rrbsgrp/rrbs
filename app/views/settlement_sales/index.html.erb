<h2><a href="#">Listing Sales by Settlement Type</a></h2>
<br/>
<table>
  <tr>
    <th>Date</th>
    <% @settlement_types.each do |settlement_type| %>
    <th><%= settlement_type.st_name %><th>
    <% end %>
    <th>VOIDS</th>
    <th>GROSS TOTAL</th>
    <th>NET TOTAL</th>
    <th></th>
  </tr>

<% @settlement_sales.each do |settlement_sale| %>
  <tr>
    <td><%= settlement_sale.ss_amount %></td>
    <td><%= settlement_sale.st_id %></td>
    <td><%= settlement_sale.stemployee_id %></td>
    <td><%= settlement_sale.vat %></td>
    <td><%= settlement_sale.void %></td>
    <td><%= settlement_sale.ss_date %></td>
    <td><%= settlement_sale.ss_revenue %></td>
    <td><%= settlement_sale.customerCount %></td>
    <td><%= settlement_sale.transactionCount %></td>
    <td><%= link_to 'Edit', edit_settlement_sale_path(settlement_sale) %></td>
  </tr>
<% end %>
</table>

