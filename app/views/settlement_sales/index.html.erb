    <td><%= text_field_tag :restaurant  %></td>
  </tr>
  <tr>
    <td>To:</td>
    <td><%= date_select(:end, '', :start_year => 2010) %></td>
    <td><%= label_tag :branch %></td>
    <td><%= text_field_tag :branch  %></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><%= submit_tag "Search" %></td>
  <% end %>
  </tr>
</table>
