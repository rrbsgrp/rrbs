<div class="left"> 
<h2><a href="#">SEARCH SALES BY CATEGORY</a></h2>
<hr />
<br/>
<% form_tag '/categorysales/search' do %>
<table width="500" border="0">
  <tr>
	<td>From:</td>
	<td><%= date_select("start",:order => [:month, :day, :year]) %></td>
	<td>Restaurant:</td>
	<td></td>
  </tr>
  <tr>
	<td>To:</td>
	<td><%= date_select(:enddate, :order => [:month, :day, :year] ) %></td>
	<td>Branch:</td>
	<td><input type="text" name="branch" /></td>
  </tr>
  <tr>
	<td>&nbsp;</td>
	<td>&nbsp;</td>
	<td><%= submit_tag "Search" %></td>
  <% end %>
  </tr>
</table>
<br/><br/>

</div>
<div class="right">
<strong>Change View: </strong>
<select>
  <option>Sales by Category</option>
  <option>Sales by Settlement Type</option>
  <option>Sales by Server:</option>
  <option>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Category</option>
  <option>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Settlement Type</option>
</select>
</div>
<div style="clear:both;"></div>
<hr />
<h2><a href="#">Listing Category Sales</a></h2>
<br />
<table border="1" width="1000">
  <tr>
	<th>Date</th>
	<th>Food </th>
	<th>Liquor</th>
	<th>Beverage</th>
	<th>Vat</th>
	<th>Void</th>
	<th>Service Charge</th>
	<th>Total Revenue</th>
	<th>Customer Count</th>
	<th>Transaction Count</th>
	<th>Edit</th>
</tr>

<% @categorysales.each do |categorysale| %>
  <tr>
	<td><%= categorysale.date %></td>
	<td></td>
    <td><%= link_to "Edit" %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Category Sale', new_categorysale_path %>
